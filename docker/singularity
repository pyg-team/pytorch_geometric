Bootstrap: docker
# From: nvidia/cuda:11.6.1-cudnn8-devel-ubuntu20.04
From: nvidia/cuda:12.1.1-cudnn8-devel-ubuntu22.04

%post
  CURDIR=$(pwd)

  # Set timezone to Etc/UTC for tzdata. See issue #4365 for more details.
  TZ=Etc/UTC && \
    ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && \
    echo $TZ > /etc/timezone

  apt-get update -y
  apt-get install -y tmux nano git wget
  apt-get install -y --no-install-recommends \
    build-essential \
    gfortran \
    libssl-dev \
    zlib1g-dev \
    libbz2-dev \
    libreadline-dev \
    libsqlite3-dev \
    wget \
    curl \
    llvm \
    libncurses5-dev \
    xz-utils \
    tk-dev \
    libxml2-dev \
    libxmlsec1-dev \
    libffi-dev \
    liblzma-dev \
    liblapack-dev \
    libopenblas-dev \
    libhdf5-dev

  export PYENV_ROOT=/opt/pyenv
  export PATH="/opt/pyenv/bin:$PATH"
  curl -L https://github.com/pyenv/pyenv-installer/raw/master/bin/pyenv-installer | bash
  pyenv install 3.11.7
  echo 'export PATH=/opt/pyenv/versions/3.11.7/bin/:$PATH' >> $SINGULARITY_ENVIRONMENT
  export PATH=/opt/pyenv/versions/3.11.7/bin/:$PATH

  # pip install torch==2.1.0
  pip install torch==2.1.0 torchvision torchaudio --index-url https://download.pytorch.org/whl/cu121

  pip install tabulate
  pip install ogb

  pip install torch_geometric

  # Optional dependencies:
  pip install pyg_lib torch_scatter torch_sparse torch_cluster torch_spline_conv -f https://data.pyg.org/whl/torch-2.1.0+cu121.html


